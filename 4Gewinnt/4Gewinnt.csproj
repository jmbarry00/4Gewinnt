<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>_4Gewinnt</RootNamespace>
	<GenerateProgramFile>false</GenerateProgramFile>
  </PropertyGroup>



  <ItemGroup>
    <SpecFlowObsoleteCodeBehindFiles Remove="Features\Spieler - Kopieren.feature.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Controller\" />
    <Folder Include="View\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="5.10.3" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.6.1" />
    <PackageReference Include="SpecFlow" Version="3.1.97" />
    <PackageReference Include="SpecFlow.Tools.MsBuild.Generation" Version="3.1.97" />
    <PackageReference Include="SpecRun.SpecFlow" Version="3.2.31" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Features\GewinnBerechnung.feature.cs">
      <DesignTime>True</DesignTime>
    </Compile>
    <Compile Update="Features\Spieler2.feature.cs">
      <DependentUpon>Spieler2.feature</DependentUpon>
      <DesignTime>True</DesignTime>
    </Compile>
    <Compile Update="Features\Spielfeld.feature.cs">
      <DesignTime>True</DesignTime>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <SpecFlowFeatureFiles Update="Features\GewinnBerechnung.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>GewinnBerechnung.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
    <SpecFlowFeatureFiles Update="Features\Spieler2.feature">
      <Visible>$(UsingMicrosoftNETSdk)</Visible>
      <CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>Spieler2.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
    <SpecFlowFeatureFiles Update="Features\Spielfeld.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>Spielfeld.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
  </ItemGroup>


</Project>
